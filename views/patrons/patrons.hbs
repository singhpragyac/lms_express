<!DOCTYPE html>
<html>
 <head>
    <script src="/static/js/main.js"></script>
    <style>
      table, th, td {
  border: 1px solid white;
  border-collapse: collapse;
}
th, td {
  background-color: #96D4D4;
}
    </style>
 </head>
<body>
    <table>
        <tr> 
            <th for="bk_id">PATRON_ID</th>
            <th for="title">NAME</th>
            <th for="au_id">ADDRESS</th>
            <th for="isbn">PHONE_NUMBER</th>
            <th for="pubyr">CREATED_ON</th>
            <th for="vw">VIEW</th>
            <th for="upd">UPDATE</th>
        </tr>
        <tr>
           <td> 
                {{#each data}}
                    {{this.PATRON_ID}}<br>
                {{/each}}  
            </td>   
            <td> 
                {{#each data}}
                    {{this.NAME}}<br>
                {{/each}}  
            </td>   
              <td> 
                {{#each data}}
                    {{this.ADDRESS}}<br>
                {{/each}}  
            </td>   
              <td> 
                {{#each data}}
                    {{this.PHONE_NUMBER}}<br>
                {{/each}}  
            </td>   
              <td> 
                {{#each data}}
                    {{this.CREATED_ON}}<br>
                {{/each}}  
            </td>   
            <td> 
                {{#each data}}
                    <a href="http://localhost:3000/patrons/{{this.PATRON_ID}}">view</a> <br>
                {{/each}} 
            </td>   
             <td> 
                {{#each data}}
                    <a href="http://localhost:3000/patrons/{{this.PATRON_ID}}/update">update</a>  <br>
                {{/each}}  
            </td>   
        </tr>
    </table>
</body>
 
</html>
